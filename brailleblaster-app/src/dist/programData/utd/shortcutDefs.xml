<?xml version="1.0" encoding="UTF-8"?>
<shortcutDefinitions>
    <!-- DOCUMENT -->
    <shortcut>
        <id>document/new</id>
        <key-combination>CTRL+N</key-combination>
        <description>Create a new document.</description>
    </shortcut>
    <shortcut>
        <id>document/open</id>
        <key-combination>CTRL+O</key-combination>
        <description>Open a document.</description>
    </shortcut>
    <shortcut>
        <id>document/close</id>
        <key-combination>CTRL+W</key-combination>
        <description>Close a document.</description>
    </shortcut>
    <shortcut>
        <id>document/quit</id>
        <key-combination>CTRL+Q</key-combination>
        <description>Quit BrailleBlaster.</description>
    </shortcut>
    <shortcut>
        <id>document/save</id>
        <key-combination>CTRL+S</key-combination>
        <description>Save the document.</description>
    </shortcut>
    <shortcut>
        <id>document/saveAs</id>
        <key-combination>F12</key-combination>
        <description>Save the document in a custom location.</description>
    </shortcut>
    <shortcut>
        <id>document/print</id>
        <key-combination>CTRL+P</key-combination>
        <description>Print a document.</description>
    </shortcut>
    <shortcut>
        <id>document/undo</id>
        <key-combination>CTRL+Z</key-combination>
        <description>Undo the last action.</description>
    </shortcut>
    <shortcut>
        <id>document/redo</id>
        <key-combination>CTRL+Y</key-combination>
        <description>Redo the last action.</description>
    </shortcut>
    <shortcut>
        <id>document/cut</id>
        <key-combination>CTRL+X</key-combination>
        <description>Cut the selected text.</description>
    </shortcut>
    <shortcut>
        <id>document/copy</id>
        <key-combination>CTRL+C</key-combination>
        <description>Copy the selected text.</description>
    </shortcut>
    <shortcut>
        <id>document/paste</id>
        <key-combination>CTRL+V</key-combination>
        <description>Paste copied text.</description>
    </shortcut>
    <shortcut>
        <id>document/hide</id>
        <key-combination>CTRL+H</key-combination>
        <description>Hide the selected elements.</description>
    </shortcut>
    <shortcut>
        <id>document/find</id>
        <key-combination>CTRL+F</key-combination>
        <description>Open the find/replace pane.</description>
    </shortcut>
    <shortcut>
        <id>document/repeatSearch</id>
        <key-combination>F3</key-combination>
        <description>Repeat the last search.</description>
    </shortcut>
    <shortcut>
        <id>document/replace</id>
        <key-combination>ALT+R</key-combination>
        <description>Replace.</description>
    </shortcut>
    <shortcut>
        <id>document/spellCheck</id>
        <key-combination>F7</key-combination>
        <description>Spell check.</description>
    </shortcut>
    <shortcut>
        <id>document/refreshTranslation</id>
        <key-combination>F5</key-combination>
        <description>Refresh translation.</description>
    </shortcut>
    <shortcut>
        <id>document/reformatDocument</id>
        <key-combination>SHIFT+F5</key-combination>
        <description>Reformat document.</description>
    </shortcut>
    <shortcut>
        <id>document/increaseFont</id>
        <key-combination>CTRL++</key-combination>
        <description>Increase font size 1 point.</description>
    </shortcut>
    <shortcut>
        <id>document/decreaseFont</id>
        <key-combination>CTRL+-</key-combination>
        <description>Decrease font size 1 point.</description>
    </shortcut>
    <shortcut>
        <id>document/emphasis</id>
        <key-combination>CTRL+E</key-combination>
        <description>Remove emphasis from the selected elements.</description>
    </shortcut>
    <shortcut>
        <id>document/wrap</id>
        <key-combination>ALT+W</key-combination>
        <description>Unwrap the selected text.</description>
    </shortcut>
    <shortcut>
        <id>document/nonBreakingSpace</id>
        <key-combination>CTRL+SPACE</key-combination>
        <description>Insert non-breaking space.</description>
    </shortcut>
    <shortcut>
        <id>document/bold</id>
        <key-combination>CTRL+B</key-combination>
        <description>Bold</description>
    </shortcut>
    <shortcut>
        <id>document/italic</id>
        <key-combination>CTRL+I</key-combination>
        <description>Italic</description>
    </shortcut>
    <shortcut>
        <id>document/underline</id>
        <key-combination>CTRL+U</key-combination>
        <description>Underline</description>
    </shortcut>
    <!-- ACTIONS -->
    <shortcut>
        <id>actions/repeatStyle</id>
        <key-combination>CTRL+SHIFT+R</key-combination>
        <description>Repeat last style applied.</description>
    </shortcut>
    <shortcut>
        <id>actions/correctTranslation</id>
        <key-combination>CTRL+T</key-combination>
        <description>Correct Braille translation.</description>
    </shortcut>
    <shortcut>
        <id>actions/previousElement</id>
        <key-combination>CTRL+ARROW UP</key-combination>
        <description>Go to previous element.</description>
    </shortcut>
    <shortcut>
        <id>actions/nextElement</id>
        <key-combination>CTRL+ARROW DOWN</key-combination>
        <description>Go to next element.</description>
    </shortcut>
    <shortcut>
        <id>actions/goToPage</id>
        <key-combination>CTRL+G</key-combination>
        <description>Open the page selection dialog.</description>
    </shortcut>
    <shortcut>
        <id>actions/goHome</id>
        <key-combination>CTRL+HOME</key-combination>
        <description>Go to the first page of the current document.</description>
    </shortcut>
    <shortcut>
        <id>actions/goEnd</id>
        <key-combination>CTRL+END</key-combination>
        <description>Go to the last page of the current document.</description>
    </shortcut>
    <shortcut>
        <id>actions/styleViewEntire</id>
        <key-combination>ALT+SHIFT+S</key-combination>
        <description>Open the entire document in the Style view.</description>
    </shortcut>
    <shortcut>
        <id>actions/styleViewCursor</id>
        <key-combination>ALT+S</key-combination>
        <description>Open the selected text in the Style view.</description>
    </shortcut>
    <!--- Transcriber-Defined Typeforms -->
    <shortcut>
        <id>actions/transAction1</id>
        <key-combination>ALT+SHIFT+1</key-combination>
        <description>Transcriber-Defined Typeform 1.</description>
    </shortcut>
    <shortcut>
        <id>actions/transAction2</id>
        <key-combination>ALT+SHIFT+2</key-combination>
        <description>Transcriber-Defined Typeform 2.</description>
    </shortcut>
    <shortcut>
        <id>actions/transAction3</id>
        <key-combination>ALT+SHIFT+3</key-combination>
        <description>Transcriber-Defined Typeform 3.</description>
    </shortcut>
    <shortcut>
        <id>actions/transAction4</id>
        <key-combination>ALT+SHIFT+4</key-combination>
        <description>Transcriber-Defined Typeform 4.</description>
    </shortcut>
    <shortcut>
        <id>actions/transAction5</id>
        <key-combination>ALT+SHIFT+5</key-combination>
        <description>Transcriber-Defined Typeform 5.</description>
    </shortcut>
    <shortcut>
        <id>actions/scriptAction</id>
        <key-combination>ALT+SHIFT+S</key-combination>
        <description>Script Action.</description>
    </shortcut>
    <shortcut>
        <id>actions/tnSymbols</id>
        <key-combination>ALT+SHIFT+N</key-combination>
        <description>Insert Transcriber's Note Symbols.</description>
    </shortcut>
    <shortcut>
        <id>actions/openSubMenu</id>
        <key-combination>SHIFT+F10</key-combination>
        <description>Open sub-menu.</description>
    </shortcut>
    <shortcut>
        <id>actions/traverse</id>
        <key-combination>CTRL+SHIFT+TAB</key-combination>
        <description>*</description>
    </shortcut>
    <!-- STYLE LOADOUTS -->
    <shortcut>
        <id>styles/miscellaneous</id>
        <key-combination>Ctrl+Shift+M</key-combination>
        <description>Set Miscellaneous style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/basic</id>
        <key-combination>Ctrl+Shift+B</key-combination>
        <description>Set Basic style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/captions</id>
        <key-combination>Ctrl+Shift+C</key-combination>
        <description>Set Caption style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/heading</id>
        <key-combination>Ctrl+Shift+H</key-combination>
        <description>Set Heading style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/lists</id>
        <key-combination>Ctrl+Shift+L</key-combination>
        <description>Set Lists style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/poetry</id>
        <key-combination>Ctrl+Shift+P</key-combination>
        <description>Set Poetry style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/plays</id>
        <key-combination>Ctrl+Shift+A</key-combination>
        <description>Set Plays style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/glossary</id>
        <key-combination>Ctrl+Shift+G</key-combination>
        <description>Set Glossary style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/exerciseMaterial</id>
        <key-combination>Ctrl+Shift+E</key-combination>
        <description>Set Exercise Material style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/index</id>
        <key-combination>Ctrl+Shift+I</key-combination>
        <description>Set Index style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/numeric</id>
        <key-combination>Ctrl+Shift+U</key-combination>
        <description>Set Numeric style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/notes</id>
        <key-combination>Ctrl+Shift+N</key-combination>
        <description>Set Notes style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/contents</id>
        <key-combination>Ctrl+Shift+T</key-combination>
        <description>Set Contents style loadout.</description>
    </shortcut>
    <shortcut>
        <id>styles/applyStyle</id>
        <key-combination>Ctrl+NUMBER 1-8</key-combination>
        <description>Apply the style corresponding to that index number in the list of styles of the current loadout.</description>
    </shortcut>
    <shortcut>
        <id>actions/printPreview</id>
        <key-combination>ALT+HOME</key-combination>
        <description>Open the print preview.</description>
    </shortcut>
    <!-- Testing required -->
    <shortcut>
        <id>actions/utdOut</id>
        <key-combination>CTRL+SHIFT+V</key-combination>
        <description>Save a document with &#60;brl&#62; elements.</description>
    </shortcut>
    <shortcut>
        <id>debug/xmlViewer</id>
        <key-combination>CTRL+SHIFT+X</key-combination>
        <description>Debug mode only: open the XML viewer.</description>
    </shortcut>
    <shortcut>
        <id>debug/styleViewer</id>
        <key-combination>CTRL+SHIFT+S</key-combination>
        <description>Debug mode only: open the Style viewer.</description>
    </shortcut>
    <shortcut>
        <id>debug/mapListViewer</id>
        <key-combination>CTRL+SHIFT+M</key-combination>
        <description>Debug mode only: open the Map List viewer.</description>
    </shortcut>
